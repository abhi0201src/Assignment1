{
    "family": "django-nextjs-frontend",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::629385237449:role/django-nextjs-ecs-execution-role",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "containerDefinitions": [
        {
            "name": "frontend",
            "image": "629385237449.dkr.ecr.us-west-2.amazonaws.com/django-nextjs-frontend:latest",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "NEXT_PUBLIC_API_URL",
                    "value": "http://api.yourdomain.com"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/django-nextjs-frontend",
                    "awslogs-region": "us-west-2",
                    "awslogs-stream-prefix": "frontend"
                }
            }
        }
    ]
}

{
    "family": "django-nextjs-backend",
    "networkMode": "awsvpc",
    "executionRoleArn": "<EXECUTION_ROLE_ARN>",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "512",
    "memory": "1024",
    "containerDefinitions": [
        {
            "name": "backend",
            "image": "<BACKEND_IMAGE>",
            "command": [],
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "DJANGO_SETTINGS_MODULE",
                    "value": "RestaurantCore.settings"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/django-nextjs-backend",
                    "awslogs-region": "us-west-2",
                    "awslogs-stream-prefix": "backend"
                }
            }
        }
    ]
}
